# 服务器配置
PORT=8080
GIN_MODE=debug
READ_TIMEOUT=30s
WRITE_TIMEOUT=30s

# 前端URL（用于CORS）
FRONTEND_URL=http://localhost:8501

# 数据库配置
DB_HOST=localhost
DB_PORT=5432
DB_USER=postgres
DB_PASSWORD=password
DB_NAME=iot_platform
DB_SSL_MODE=disable
DB_TIMEZONE=UTC

# Redis配置
REDIS_HOST=localhost
REDIS_PORT=6379
REDIS_PASSWORD=
REDIS_DB=0

# JWT配置
JWT_SECRET=your-secret-key-change-in-production
JWT_EXPIRES=24h
JWT_REFRESH_EXPIRES=168h
JWT_ISSUER=iot-platform

# WebSocket配置
WS_READ_BUFFER=1024
WS_WRITE_BUFFER=1024
WS_CHECK_ORIGIN=false
WS_HANDSHAKE_TIMEOUT=10s
WS_MAX_MESSAGE_SIZE=512

# 日志配置
LOG_LEVEL=info
LOG_FORMAT=json
LOG_OUTPUT=stdout
LOG_FILE_PATH=./logs/app.log
LOG_MAX_SIZE=100
LOG_MAX_BACKUPS=3
LOG_MAX_AGE=28
LOG_COMPRESS=true